---
interface Props {
  img: string;
  nombre: string;
  apellido: string;
  text: string;
}

const { nombre, apellido, img, text } = Astro.props;
---

<div class="info">
  <div class="img-container">
    <img src={img} alt={`${nombre} ${apellido}`} />
    <div class="line"></div>
  </div>
  <div class="info-container">
    <div class="name">
      <h3>{nombre}</h3>
      <h3>{apellido}</h3>
    </div>
    <p>
      {text}
    </p>
  </div>
</div>

<style>
  .info {
    margin: 20px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: center;
    align-items: center;
    padding: 0 10px;
    width: 380px;
    border-radius: 10px;
  }

  h3 {
    margin: 0;
  }

  p {
    font-size: 1em;
    text-align: justify;
  }

  .name {
    font-family: "Lora", sans-serif;
    color: rgba(154, 153, 153, 1);
    font-weight: 590;
    font-size: 1.5em;
  }

  .img-container {
    text-align: center;
    margin: 20px;
    position: relative;
  }

  .img-container img {
    width: 350px;
    height: 250px;
    object-fit: cover;
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center center;
  }

  .line {
    width: 100%;
    height: 7px;
    background-color: rgba(155, 158, 161, 1);
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
  }

  @media (max-width: 912px) {
    .img-container img {
      width: 250px;
      height: 200px;
    }

    .info {
      margin: 10px;
      padding: 20px 20px;
      width: 300px;
    }
  }
</style>
