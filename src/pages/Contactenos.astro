---
import Layout from "../layouts/Layout.astro";
import CircleImg from "../components/CircleImg.astro";
import Carousel from "components/carousel";
import { SendCorreo } from "components/correo";

// Definici√≥n de los agentes
const agents = [
  {
    id: 1,
    name: "Dra. Mercedes Mareco",
    profession: "Abogada",
    image: "/img/home.jpg",
    whatsappNumber: "595982506890",
  },
  {
    id: 2,
    name: "Dr. Antonio Benitez",
    profession: "Abogado",
    image: "/img/home.jpg",
    whatsappNumber: "595986947181",
  },
  {
    id: 3,
    name: "Lic. Lilian Cabrera",
    profession: "Escribana",
    image: "/img/home.jpg",
    whatsappNumber: "595986947181",
  },
];
---

<Layout>
  <section id="hero2">
    <div class="content">
      <div>
        <h1 class="home">Contactenos</h1>
      </div>
      <div class="transparent-box">
        <div class="text">
          <h2 class="text1">Contacte con uno de nuestros agentes.</h2>
          <CircleImg />
        </div>
        <Carousel client:load agents={agents} />
      </div>
    </div>
  </section>

  <section>
    <div class="correo">
      <h1 class="correo-title">Correo</h1>
      <CircleImg />
      <SendCorreo client:load />
    </div>
  </section>
</Layout>

<style>
  .content {
    display: flex;
    flex-direction: column;
    background-image: linear-gradient(
        0deg,
        rgba(34, 53, 85, 0.6),
        rgba(34, 53, 85, 0.6)
      ),
      url("/img/contacto-page.jpg");
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center center;
  }

  .correo-title {
    color: black;
    font-weight: 590;
    margin: 50px;
  }

  .text1 {
    margin: 50px;
    font-weight: 590;
    font-size: x-large;
    font-family: "Lora", sans-serif;
  }

  .text {
    text-align: center;
  }

  #hero2 {
    display: flex;
    flex-direction: column;
    color: white;
  }

  .home {
    margin: 50px;
    text-align: left;
  }

  .transparent-box {
    background-color: rgba(0, 0, 0, 0.5);
    height: 100%;
    position: relative;
  }

  .correo {
    text-align: center;
  }

  .boton {
    margin: 30px;
    display: flex;
    text-align: end;
    justify-content: flex-end;
  }

  @media (max-width: 912px) {

    .text1 {
      margin: 15px;
      font-size: medium;
    }

    .home {
      margin: 30px;
      font-size: medium;
    }
    .correo-title {
      font-size: 1.9em;
      font-weight: normal;
    }
  }
</style>
