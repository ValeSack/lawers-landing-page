---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lawers Landing Page</title>
  </head>
  <Header />
  <main>
    <slot />
  </main>
  <Footer />

  <style is:global>
    * {
      box-sizing: border-box;
    }

    html {
      font-family: system-ui, sans-serif;
      background-size: 224px;
    }
    button {
      font-size: 1em;
      font-weight: bold;
      padding: 10px 30px;
      border-radius: 5px;
      border: none;
      box-shadow: 2px 2px 10px rgb(0, 0, 0, 0.5);
      color: white;
      background-color: rgba(101, 104, 108, 1);
    }

    button:hover {
      background-color: rgb(120, 128, 138);
    }
  </style>


</html>
